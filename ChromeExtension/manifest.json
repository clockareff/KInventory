{
  "manifest_version": 2,

  "name": "KInventory Plugin",
  "description": "This extension will allow users to add food items to their KInventory",
  "version": "1.0",

  "icons": {
    "48": "fridge-icon.png"
  },

  "permissions": [
    "tabs", "<all_urls>"
  ],

  "browser_action": {
    "default_icon": "fridge-icon.png",
    "default_popup": "popup.html"
  },

  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "web_accessible_resources": ["add_icon.jpeg"]
}
